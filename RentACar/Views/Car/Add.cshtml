@model Car

<div class="container mt-4">
	<div class="row">
		<div class="col-md-8 offset-md-2">
			<div class="card">
				<div class="card-header bg-primary text-white">
					<h2>Add a new car</h2>
				</div>
				<div class="card-body">
					<form asp-action="Add" method="post">
						<div class="form-group mb-3">
							<label asp-for="Model" class="form-label">Model</label>
							<input asp-for="Model" class="form-control" placeholder="Enter model here" />
						</div>
						<div class="form-group mb-3">
							<label asp-for="Make" class="form-label">Make</label>
							<input asp-for="Make" row="5" class="form-control" placeholder="Enter what you did that day" />
						</div>
						<div class="form-group mb-3">
							<label asp-for="ManufactureYear" class="form-label">Manufacture Year</label>
							<input asp-for="ManufactureYear" class="form-control" type="number" />
						</div>
						<div class="form-group mb-3">
							<label asp-for="Fuel" class="form-label">Fuel</label>
							<input asp-for="Fuel" class="form-control" />
						</div>
						<div class="d-flex justify-content-between">
							<button type="submit" class="btn btn-primary">Add</button>
							<a asp-controller="Car" asp-action="Index" class="btn btn-danger">Cancel</a>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
