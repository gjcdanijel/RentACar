@model Customer

<div class="container mt-4">
	<div class="row">
		<div class="col-md-8 offset-md-2">
			<div class="card">
				<div class="card-header bg-primary text-white">
					<h2>Add a new customer</h2>
				</div>
				<div class="card-body">
					<form asp-action="Add" method="post">
						<div asp-validation-summary="All" class="text-danger"></div>
						<div class="form-group mb-3">
							<label asp-for="LastName" class="form-label">Lastname</label>
							<input asp-for="LastName" class="form-control"/>
						</div>
						<div class="form-group mb-3">
							<label asp-for="FirstName" class="form-label">Firstname</label>
							<input asp-for="FirstName" row="5" class="form-control"/>
						</div>
						<div class="form-group mb-3">
							<label asp-for="Email" class="form-label">Email</label>
							<input asp-for="Email" class="form-control"/>
						</div>
						<div class="form-group mb-3">
							<label asp-for="Phone" class="form-label">Phone</label>
							<input asp-for="Phone" class="form-control"/>
						</div>
						<div class="form-group mb-3">
							<label asp-for="Address" class="form-label">Address</label>
							<input asp-for="Address" class="form-control"/>
						</div>
						<div class="d-flex justify-content-between">
							<button type="submit" class="btn btn-primary">Add</button>
							<a asp-controller="Customer" asp-action="Index" class="btn btn-danger">Cancel</a>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
@section Scripts {
		<partial name="_ValidationScriptsPartial" />
}
