@model Maintenance

<div class="container mt-4">
	<div class="row">
		<div class="col-md-8 offset-md-2">
			<div class="card">
				<div class="card-header bg-primary text-white">
					<h2>Add a maintenance.</h2>
				</div>
				<div class="card-body">
					<form asp-action="Add" method="post">
						<div class="form-group mb-3">
							<div asp-validation-summary="All" class="text-danger"></div>
							<label asp-for="CarId" class="form-label">Car</label>
							<select asp-for="CarId" asp-items="ViewBag.Cars" class="form-control"></select>
						</div>
						<div class="form-group mb-3">
							<label asp-for="Type" class="form-label">Type</label>
							<input asp-for="Type" class="form-control" />
						</div>
						<div class="form-group mb-3">
							<label asp-for="Description" class="form-label">Description</label>
							<input asp-for="Description" class="form-control"/>
						</div>
						<div class="form-group mb-3">
							<label asp-for="Cost" class="form-label">Cost</label>
							<input asp-for="Cost" class="form-control" type="number" />
						</div>
						<div class="form-group mb-3">
							<label asp-for="MaitenanceDate" class="form-label">Date</label>
							<input asp-for="MaitenanceDate" class="form-control" type="datetime-local" value="@Model.MaitenanceDate.ToString("yyyy-MM-ddTHH:mm")" />
						</div>
						<div class="d-flex justify-content-between">
							<button type="submit" class="btn btn-primary">Add</button>
							<a asp-controller="Maintenance" asp-action="Index" class="btn btn-danger">Cancel</a>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
